@* Component: BookingCard - Displays individual booking with actions *@
@inject AuthenticationStateProvider AuthProvider

<div class="booking-card">
    <div class="booking-header">
        <div class="booking-id-section">
            <span class="booking-label">Booking ID</span>
            <span class="booking-id">@Booking.BookingId.ToString().Substring(0, 8)...</span>
        </div>
        <BookingStatusBadge State="@Booking.State" />
    </div>

    <div class="booking-body">
        <div class="escrow-section">
            <span class="escrow-label">Escrow Status</span>
            <EscrowStatusBadge Status="@Booking.EscrowStatus" />
        </div>
    </div>

<div class="booking-actions">
    @if (IsPending && IsProvider)
    {
        <button class="btn btn-accept"
                @onclick="OnAcceptAsync"
                disabled="@IsProcessing">
            @if (IsProcessing && CurrentAction == "accept")
            {
                <span class="spinner"></span>
                <span>Accepting...</span>
            }
            else
            {
                <span>✓ Accept</span>
            }
        </button>

        <button class="btn btn-reject"
                @onclick="OnRejectAsync"
                disabled="@IsProcessing">
            @if (IsProcessing && CurrentAction == "reject")
            {
                <span class="spinner"></span>
                <span>Rejecting...</span>
            }
            else
            {
                <span>✕ Reject</span>
            }
        </button>
    }
    else if (IsPending && IsClient)
    {
        <p class="waiting">
            ⏳ Waiting for provider response
        </p>
    }
    else if (IsAccepted && IsProvider)
    {
        <button class="btn btn-complete"
                @onclick="OnCompleteAsync"
                disabled="@IsProcessing">
            @if (IsProcessing && CurrentAction == "complete")
            {
                <span class="spinner"></span>
                <span>Completing...</span>
            }
            else
            {
                <span>✓ Complete</span>
            }
        </button>
    }
</div>



    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="error-message">
            <span class="error-icon">⚠️</span>
            <span>@ErrorMessage</span>
        </div>
    }
</div>

@code {
    [Parameter]
    public BookingDto Booking { get; set; } = null!;

    [Parameter]
    public EventCallback OnActionCompleted { get; set; }

    [Inject]
    public IBookingService BookingService { get; set; } = null!;

    private bool IsProcessing { get; set; }
    private string CurrentAction { get; set; } = string.Empty;
    private string ErrorMessage { get; set; } = string.Empty;
	private string? CurrentUserId;

protected override async Task OnInitializedAsync()
{
    var auth = await AuthProvider.GetAuthenticationStateAsync();
    CurrentUserId = auth.User.FindFirst("sub")?.Value;
}
private bool IsProvider => Booking.ProviderId == CurrentUserId;
private bool IsClient => Booking.ClientId == CurrentUserId;
private bool IsPending => Booking.State == "Pending";
private bool IsAccepted => Booking.State == "Accepted";

    private async Task OnAcceptAsync()
    {
        await ExecuteActionAsync("accept", async () =>
        {
            var result = await BookingService.AcceptBookingAsync(Booking.BookingId);
            if (result.Success)
            {
                Booking.State = "Accepted";
            }
            return result;
        });
    }

    private async Task OnRejectAsync()
    {
        await ExecuteActionAsync("reject", async () =>
        {
            var result = await BookingService.RejectBookingAsync(Booking.BookingId);
            if (result.Success)
            {
                Booking.State = "Rejected";
                Booking.EscrowStatus = "Refunded";
            }
            return result;
        });
    }

    private async Task OnCompleteAsync()
    {
        await ExecuteActionAsync("complete", async () =>
        {
            var result = await BookingService.CompleteBookingAsync(Booking.BookingId);
            if (result.Success)
            {
                Booking.State = "Completed";
                Booking.EscrowStatus = "Released";
            }
            return result;
        });
    }

    private async Task ExecuteActionAsync(string action, Func<Task<ApiResponse<bool>>> apiCall)
    {
        IsProcessing = true;
        CurrentAction = action;
        ErrorMessage = string.Empty;
        StateHasChanged();

        try
        {
            var result = await apiCall();

            if (result.Success)
            {
                await OnActionCompleted.InvokeAsync();
            }
            else
            {
                ErrorMessage = result.ErrorMessage ?? "An error occurred";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = ex.Message;
        }
        finally
        {
            IsProcessing = false;
            CurrentAction = string.Empty;
            StateHasChanged();
        }
    }
}

