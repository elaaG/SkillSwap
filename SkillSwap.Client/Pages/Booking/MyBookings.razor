@page "/my-bookings"
@using SkillSwap.Client.Models
@using SkillSwap.Client.Services
@using SkillSwap.Client.Shared
@* @attribute [Authorize] *@
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthProvider

<AuthorizeView>
<Authorized>
    <div class="my-bookings-page">
    <div class="page-header">
        <h1 class="page-title">My Bookings</h1>
        <p class="page-subtitle">Manage your service bookings and transactions</p>
    </div>

    @if (IsLoading)
    {
        <div class="loading-container">
            <div class="loading-spinner"></div>
            <p class="loading-text">Loading your bookings...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="error-container">
            <div class="error-icon">‚ö†Ô∏è</div>
            <h3 class="error-title">Unable to Load Bookings</h3>
            <p class="error-message">@ErrorMessage</p>
            <button class="btn-retry" @onclick="LoadBookingsAsync">
                <span>üîÑ Retry</span>
            </button>
        </div>
    }
    else if (Bookings == null || !Bookings.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">üìÖ</div>
            <h3 class="empty-title">No Bookings Yet</h3>
            <p class="empty-message">You don't have any bookings at the moment.</p>
            <a href="/listings" class="btn-browse">
                <span>Browse Services</span>
            </a>
        </div>
    }
    else
    {
        @* Calculate counts for each section *@
        var clientBookings = Bookings.Where(b => b.ClientId == CurrentUserId).ToList();
        var providerBookings = Bookings.Where(b => b.ProviderId == CurrentUserId).ToList();

        <div class="stats-bar">
            <div class="stat-card">
                <span class="stat-label">Total Bookings</span>
                <span class="stat-value">@Bookings.Count</span>
            </div>
            <div class="stat-card">
                <span class="stat-label">Pending</span>
                <span class="stat-value stat-pending">@Bookings.Count(b => b.State == "Pending")</span>
            </div>
            <div class="stat-card">
                <span class="stat-label">Accepted</span>
                <span class="stat-value stat-accepted">@Bookings.Count(b => b.State == "Accepted")</span>
            </div>
            <div class="stat-card">
                <span class="stat-label">Completed</span>
                <span class="stat-value stat-completed">@Bookings.Count(b => b.State == "Completed")</span>
            </div>
        </div>

        @* Section 1: Bookings I Requested (as Client) *@
        @if (clientBookings.Any())
        {
            <div class="section-container">
                <div class="section-header">
                    <h2 class="section-title">üì§ Bookings I Requested</h2>
                    <span class="section-count">@clientBookings.Count</span>
                </div>
                <div class="bookings-grid">
                    @foreach (var booking in clientBookings)
                    {
                        <BookingCard Booking="@booking" OnActionCompleted="@LoadBookingsAsync" />
                    }
                </div>
            </div>
        }

        @* Section 2: Bookings On My Listings (as Provider) *@
        @if (providerBookings.Any())
        {
            <div class="section-container">
                <div class="section-header">
                    <h2 class="section-title">üì• Bookings On My Listings</h2>
                    <span class="section-count">@providerBookings.Count</span>
                </div>
                <div class="bookings-grid">
                    @foreach (var booking in providerBookings)
                    {
                        <BookingCard Booking="@booking" OnActionCompleted="@LoadBookingsAsync" />
                    }
                </div>
            </div>
        }

        @* Show empty state if no bookings in either section *@
        @if (!clientBookings.Any() && !providerBookings.Any())
        {
            <div class="empty-state">
                <div class="empty-icon">üìÖ</div>
                <h3 class="empty-title">No Bookings Yet</h3>
                <p class="empty-message">You don't have any bookings at the moment.</p>
                <a href="/listings" class="btn-browse">
                    <span>Browse Services</span>
                </a>
            </div>
        }
    }
</div>

@code {
    [Inject]
    private IBookingService BookingService { get; set; } = null!;

    private List<BookingDto> Bookings { get; set; } = new();
    private bool IsLoading { get; set; } = true;
    private string ErrorMessage { get; set; } = string.Empty;
    private string? CurrentUserId;

    protected override async Task OnInitializedAsync()
    {
        var auth = await AuthProvider.GetAuthenticationStateAsync();
        CurrentUserId = auth.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        await LoadBookingsAsync();
    }
    
    private bool IsProvider(BookingDto b)
        => b.ProviderId == CurrentUserId;

    private bool IsClient(BookingDto b)
        => b.ClientId == CurrentUserId;

    private async Task LoadBookingsAsync()
    {
        IsLoading = true;
        ErrorMessage = string.Empty;
        StateHasChanged();

        try
        {
            var result = await BookingService.GetMyBookingsAsync();

            if (result.Success && result.Data != null)
            {
                Bookings = result.Data;
            }
            else
            {
                ErrorMessage = result.ErrorMessage ?? "Failed to load bookings";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = ex.Message;
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }
}

<style>
