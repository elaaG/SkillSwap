        align-items: center;
        justify-content: center;
        padding: 4rem 2rem;
    }

    .loading-spinner {
        width: 3rem;
        height: 3rem;
        border: 4px solid #e5e7eb;
        border-top-color: #3b82f6;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    .loading-text {
        margin-top: 1rem;
        font-size: 1rem;
        color: #6b7280;
    }

