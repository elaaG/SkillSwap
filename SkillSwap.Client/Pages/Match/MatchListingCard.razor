@using SkillSwap.Client.Models
@inject NavigationManager Nav

<div class="match-listing-card" @onclick="NavigateToListing">
    <div class="card-header">
        <h3 class="card-title">@Listing.Title</h3>
        @if (Listing.IsPersonalMatch)
        {
            <span class="match-badge">‚ú® Match</span>
        }
    </div>

    @if (!string.IsNullOrWhiteSpace(Listing.Description))
    {
        <p class="card-description">@TruncateDescription(Listing.Description, 100)</p>
    }

    <div class="card-provider">
        <span class="provider-icon">üë§</span>
        <span class="provider-name">@Listing.ProviderName</span>
        @if (Listing.ProviderRating.HasValue && Listing.ProviderRating.Value > 0)
        {
            <span class="provider-rating">‚≠ê @Listing.ProviderRating.Value.ToString("F1")</span>
        }
    </div>

    @if (Listing.Skills.Any())
    {
        <div class="card-skills">
            @foreach (var skill in Listing.Skills.Take(3))
            {
                <span class="skill-tag">@skill.Name</span>
            }
            @if (Listing.Skills.Count > 3)
            {
                <span class="skill-tag more">+@(Listing.Skills.Count - 3) more</span>
            }
        </div>
    }

    <div class="card-footer">
        <div class="card-credits">
            <span class="credits-icon">üí≥</span>
            <span class="credits-value">@Listing.CreditsPerHour</span>
            <span class="credits-label">credits/hr</span>
        </div>
        <button class="btn-view" @onclick="NavigateToListing" @onclick:stopPropagation="true">
            View Details ‚Üí
        </button>
    </div>
</div>

@code {
    [Parameter]
    public MatchedListingDto Listing { get; set; } = null!;

    private void NavigateToListing()
    {
        Nav.NavigateTo($"/listings/{Listing.ListingId}");
    }

    private string TruncateDescription(string description, int maxLength)
    {
        if (string.IsNullOrWhiteSpace(description) || description.Length <= maxLength)
            return description;

        return description.Substring(0, maxLength) + "...";
    }
}

