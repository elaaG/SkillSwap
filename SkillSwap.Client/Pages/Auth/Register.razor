@page "/register"
@inject IAuthService AuthService
@inject NavigationManager Navigation

<div class="auth-container">
    <div class="auth-card card">
        <div class="card-body" style="padding: var(--spacing-10);">
            <div class="auth-header">
                <div style="width: 64px; height: 64px; background: linear-gradient(135deg, var(--primary-600), var(--primary-800)); border-radius: var(--radius-xl); display: flex; align-items: center; justify-content: center; margin: 0 auto var(--spacing-4); box-shadow: var(--shadow-lg);">
                    <span style="font-size: 2rem;">‚ú®</span>
                </div>
                <h2>Create Your Account</h2>
                <p>Join SkillSwap and start learning today</p>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">
                    <strong>‚ö†Ô∏è Error:</strong> @errorMessage
                </div>
            }

            <EditForm Model="@registerRequest" OnValidSubmit="HandleRegister">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label class="form-label">Full Name</label>
                    <InputText @bind-Value="registerRequest.FullName" 
                               class="form-control" 
                               placeholder="John Doe"
                               autocomplete="name" />
                    <ValidationMessage For="@(() => registerRequest.FullName)" class="validation-message" />
                </div>

                <div class="form-group">
                    <label class="form-label">Email Address</label>
                    <InputText @bind-Value="registerRequest.Email" 
                               class="form-control" 
                               placeholder="name@example.com"
                               autocomplete="email" />
                    <ValidationMessage For="@(() => registerRequest.Email)" class="validation-message" />
                </div>

                <div class="form-group">
                    <label class="form-label">Password</label>
                    <InputText @bind-Value="registerRequest.Password" 
                               type="password" 
                               class="form-control" 
                               placeholder="Create a strong password"
                               autocomplete="new-password" />
                    <small class="form-text">Must be at least 6 characters long</small>
                    <ValidationMessage For="@(() => registerRequest.Password)" class="validation-message" />
                </div>

                <div class="form-group">
                    <label class="form-label">Confirm Password</label>
                    <InputText @bind-Value="registerRequest.ConfirmPassword" 
                               type="password" 
                               class="form-control" 
                               placeholder="Re-enter your password"
                               autocomplete="new-password" />
                    <ValidationMessage For="@(() => registerRequest.ConfirmPassword)" class="validation-message" />
                </div>

                <div style="background: var(--primary-50); padding: var(--spacing-4); border-radius: var(--radius-lg); margin-bottom: var(--spacing-5); border: 1px solid var(--primary-200);">
                    <div style="display: flex; align-items: start; gap: var(--spacing-3);">
                        <span style="font-size: 1.25rem;">üéÅ</span>
                        <div>
                            <p style="margin: 0; font-size: 0.875rem; color: var(--primary-900); font-weight: 600;">Welcome Bonus</p>
                            <p style="margin: 0; margin-top: var(--spacing-1); font-size: 0.8125rem; color: var(--primary-700);">Get 2 free time credits when you sign up!</p>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-block btn-lg" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-small"></span>
                        <span>Creating account...</span>
                    }
                    else
                    {
                        <span>Create Account</span>
                        <span>‚Üí</span>
                    }
                </button>
            </EditForm>

            <div class="auth-footer">
                <p>Already have an account? <a href="/login">Sign in instead</a></p>
            </div>
        </div>
    </div>

    <div style="position: absolute; bottom: var(--spacing-6); left: 50%; transform: translateX(-50%); color: white; font-size: 0.875rem; opacity: 0.9; text-align: center; z-index: 1;">
        <p style="margin: 0;">SkillSwap ¬© 2026 ‚Ä¢ Exchange skills, not money</p>
    </div>
</div>

<style>
    .validation-message {
        color: var(--danger-600);
        font-size: 0.8125rem;
        margin-top: var(--spacing-2);
        display: block;
    }

    .spinner-small {
        width: 16px;
        height: 16px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.6s linear infinite;
        display: inline-block;
    }
</style>

@code {
    private RegisterRequest registerRequest = new();
    private bool isLoading = false;
    private string? errorMessage;

    private async Task HandleRegister()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var result = await AuthService.RegisterAsync(registerRequest);

            if (result.Success)
            {
                Navigation.NavigateTo("/");
            }
            else
            {
                errorMessage = result.ErrorMessage;
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An unexpected error occurred. Please try again.";
        }
        finally
        {
            isLoading = false;
        }
    }
}
