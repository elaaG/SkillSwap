@page "/wallet"
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]
@inject IWalletService WalletService
@inject NavigationManager Navigation

<div class="container page-container">
    <h1 class="page-title">  </h1>

    @if (isLoading)
    {
        <div class="spinner"></div>
    }
    else if (wallet != null)
    {
        <div class="balance-card" style="margin-bottom: var(--spacing-6);">
            <div>
                <h2 style="font-size: 1.75rem; margin-bottom: var(--spacing-2);">Your Time Bank</h2>
                <p style="opacity: 0.95; margin: 0;">Manage and track your time credits</p>
            </div>
            
            <div class="balance-display">
                <div class="balance-item">
                    <span class="balance-label">
                        <svg style="width: 20px; height: 20px; display: inline-block; vertical-align: middle; margin-right: 4px;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                        </svg>
                        Available Credits
                    </span>
                    <span class="balance-amount">@wallet.AvailableBalance.ToString("F1")</span>
                    <span class="balance-unit">hours</span>
                </div>
                
                <div class="balance-item">
                    <span class="balance-label">
                        <svg style="width: 20px; height: 20px; display: inline-block; vertical-align: middle; margin-right: 4px;" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
                        </svg>
                        In Escrow
                    </span>
                    <span class="balance-amount">@wallet.EscrowBalance.ToString("F1")</span>
                    <span class="balance-unit">hours</span>
                </div>
                
                <div class="balance-item">
                    <span class="balance-label">
                        <svg style="width: 20px; height: 20px; display: inline-block; vertical-align: middle; margin-right: 4px;" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
                        </svg>
                        Total Balance
                    </span>
                    <span class="balance-amount">@wallet.TotalBalance.ToString("F1")</span>
                    <span class="balance-unit">hours</span>
                </div>
            </div>
        </div>

        <!-- Transaction History -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <svg style="width: 20px; height: 20px; display: inline-block; vertical-align: middle; margin-right: 8px;" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
                        <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
                    </svg>
                    Transaction History
                </h3>
            </div>
            <div class="card-body" style="padding: 0;">
                @if (transactionHistory != null && transactionHistory.Transactions.Any())
                {
                    <ul class="transaction-list">
                        @foreach (var transaction in transactionHistory.Transactions)
                        {
                            <li class="transaction-item">
                                <div class="transaction-info">
                                    <div class="transaction-partner">
                                        @if (!string.IsNullOrEmpty(transaction.PartnerName))
                                        {
                                            <svg style="width: 16px; height: 16px; display: inline-block; vertical-align: middle; margin-right: 6px; color: var(--gray-500);" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                                            </svg>
                                            @transaction.PartnerName
                                        }
                                        else
                                        {
                                            <svg style="width: 16px; height: 16px; display: inline-block; vertical-align: middle; margin-right: 6px; color: var(--gray-500);" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"/>
                                            </svg>
                                            <span>System</span>
                                        }
                                    </div>
                                    <div class="transaction-type">
                                        <span style="display: inline-flex; align-items: center; gap: 4px; padding: 2px 8px; background: var(--gray-100); border-radius: var(--radius-full); font-size: 0.75rem; font-weight: 600; color: var(--gray-700);">
                                            @transaction.Type
                                        </span>
                                        @if (!string.IsNullOrEmpty(transaction.Notes))
                                        {
                                            <span style="color: var(--gray-500);"> • @transaction.Notes</span>
                                        }
                                    </div>
                                </div>
                                <div style="display: flex; align-items: center; gap: var(--spacing-6);">
                                    <div class="transaction-amount @(transaction.Direction == "Received" ? "positive" : "negative")">
                                        @(transaction.Direction == "Received" ? "+" : "-")@transaction.Amount.ToString("F1")
                                        <span style="font-size: 0.75rem; opacity: 0.8; font-weight: 500;">hrs</span>
                                    </div>
                                    <div class="transaction-date">
                                        @transaction.Timestamp.ToString("MMM dd, yyyy")<br/>
                                        <span style="color: var(--gray-400); font-size: 0.75rem;">@transaction.Timestamp.ToString("hh:mm tt")</span>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>

                    <!-- Pagination -->
                    @if (transactionHistory.TotalPages > 1)
                    {
                        <div class="pagination">
                            <button @onclick="() => LoadPage(1)" 
                                    disabled="@(currentPage == 1)"
                                    class="btn btn-secondary">
                                <svg style="width: 16px; height: 16px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"/>
                                </svg>
                                First
                            </button>
                            <button @onclick="() => LoadPage(currentPage - 1)" 
                                    disabled="@(currentPage == 1)"
                                    class="btn btn-secondary">
                                <svg style="width: 16px; height: 16px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                                </svg>
                                Previous
                            </button>
                            
                            <span style="padding: var(--spacing-3) var(--spacing-5); display: flex; align-items: center; font-weight: 600; color: var(--gray-700);">
                                Page @currentPage of @transactionHistory.TotalPages
                            </span>
                            
                            <button @onclick="() => LoadPage(currentPage + 1)" 
                                    disabled="@(currentPage == transactionHistory.TotalPages)"
                                    class="btn btn-secondary">
                                Next
                                <svg style="width: 16px; height: 16px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                </svg>
                            </button>
                            <button @onclick="() => LoadPage(transactionHistory.TotalPages)" 
                                    disabled="@(currentPage == transactionHistory.TotalPages)"
                                    class="btn btn-secondary">
                                Last
                                <svg style="width: 16px; height: 16px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"/>
                                </svg>
                            </button>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state">
                        <svg style="width: 64px; height: 64px; margin: 0 auto var(--spacing-4); color: var(--gray-400);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        <h3>No transactions yet</h3>
                        <p>Your transaction history will appear here once you start exchanging time credits</p>
                    </div>
                }
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            <strong>⚠️ Error:</strong> @errorMessage
        </div>
    }
</div>

@code {
    private Wallet? wallet;
    private TransactionHistoryResponse? transactionHistory;
    private bool isLoading = true;
    private string? errorMessage;
    private int currentPage = 1;
    private int pageSize = 10;

    protected override async Task OnInitializedAsync()
    {
        await LoadWalletData();
    }

    private async Task LoadWalletData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var walletResult = await WalletService.GetWalletAsync();
            if (walletResult.Success)
            {
                wallet = walletResult.Data;
            }
            else
            {
                errorMessage = walletResult.ErrorMessage;
            }

            await LoadTransactionHistory();
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to load wallet data. Please try again.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadTransactionHistory()
    {
        var historyResult = await WalletService.GetTransactionHistoryAsync(currentPage, pageSize);
        if (historyResult.Success)
        {
            transactionHistory = historyResult.Data;
        }
    }

    private async Task LoadPage(int page)
    {
        currentPage = page;
        await LoadTransactionHistory();
    }
}
